{# templates\security\login.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Bienvenue sur AFPA{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('css/login.css') }}" rel="stylesheet">
{% endblock %}
{% block body %}
    <main id="mainLogin">
        <div class="container">
            {# <div class="row" id="divRow"> #}
            <div class="row justify-content-center">
                {# <div class="col-10 col-md-8 col-xl-4" id="divFormLogin"> #}
                <div class="col-10 col-md-6 col-xl-4 img">
                    <div id="formLogin">
                        <form method="post" action="{{ path('app_login') }}" id="form">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <h1 class="h3 mb-3 font-weight-normal" id="h3Login">Veuillez vous connecter</h1>
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="inputEmail" class="form-control" autocomplete="username" required autofocus>
                            <label for="inputPassword" class="mt-2">Mot de passe</label>
                            <div class="password-toggle">
                                <input type="password" name="_password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                <button type="button" class="toggle-password"><ion-icon name="eye-outline"></ion-icon></button>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            <div class="checkbox mb-3" id="divCheckboxLogin">
                                <input type="checkbox" name="_remember_me" id="_remember_me">
                                <label for="_remember_me">Rester connecter</label>
                            </div>
                            <button class="btn btn-lg" type="submit" id="btnLogin">
                                Se connecter
                            </button>
                        </form>
                        <div id="btnRegistration">
                            <a href="{{ path('app_register') }}">S'enregistrer</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}